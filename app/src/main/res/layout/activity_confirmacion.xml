<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/confirmacio"
    android:orientation="vertical"
    tools:context=".ConfirmacionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:titleTextColor="@android:color/white">

        <!-- Botón de menú -->
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu"
            android:scaleX="1.1"
            android:scaleY="1.5"
            android:contentDescription="Menú" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:gravity="center"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id" />

    <TextView
            android:id="@+id/pedido_real"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="80dp"
            android:gravity="center_horizontal|top"
            android:text="@string/pedido_real"
            android:textAppearance="@style/pedido_real" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/subtotal_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:textColor="#000000"
            android:textSize="19sp"
            android:text="Subtotal :"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp"
            android:layout_marginTop="32dp"
            android:textSize="15sp"
            android:text="S/. 16.00"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/costo_env_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:textColor="#000000"
            android:textSize="19sp"
            android:text="Costo/envío : "
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvCostoEnvio"
            android:layout_width="68dp"
            android:layout_height="18dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="32dp"
            android:textSize="15sp"
            android:text="S/. 5.00"
            android:gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Total :"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="S/. 21.00"
            android:gravity="center"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="90dp"
        android:text="Ir a inicio"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20sp"
        android:backgroundTint="#39B55C"
        android:elevation="8dp"/>


</LinearLayout>